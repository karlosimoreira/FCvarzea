<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/scrollView"
    tools:context="br.com.karlosimoreira.fcvarzea.activitys.Home.NewMatchActivity"
    tools:showIn="@layout/activity_new_match">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/relative"
        android:background="@color/colorPrimary"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photoProfiler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cropToPadding ="true"
            android:src="@drawable/ic_account"
            android:onClick="LoadImage"
            android:layout_centerHorizontal="true" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photoProfiler"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/viewName">
            <AutoCompleteTextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_name"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:textColor="@color/colorIcons"
                android:singleLine="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="28dp"
                android:textStyle="bold"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/viewName"
            android:id="@+id/viewDesc">
        <AutoCompleteTextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_desc"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:textColor="@color/colorIcons"
            android:singleLine="true"
            android:textStyle="bold"
            android:layout_below="@+id/viewName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

</RelativeLayout>




