<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_account"
            />

        <ImageView
            android:id="@+id/ivPosition"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="70dp"
            android:src="@drawable/ic_position_select_ca" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carlos Alberto Reis Moreira"
            android:id="@+id/tvName"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            style="@style/TextViewTextAppearance"/>

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btnDetails"
            android:background="@mipmap/ic_details"
            android:layout_gravity="right|bottom" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleIndicator"
            android:id="@+id/rbClassificacao"
            android:scaleX=".5"
            android:scaleY=".5"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            android:isIndicator="true"
            android:max="5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="120dp"
            android:layout_gravity="center_vertical" />

    </FrameLayout>

</LinearLayout>